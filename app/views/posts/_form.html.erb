
<% if flash[:errors] %>
    <ul>
    <% flash[:errors].each do | error_message | %>
        <li> 
        <%= error_message %> 
        </li>
        <% end %>
    </ul>
<% end %>

<%= form_for @post do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.label :blogger_id %>
    <%= f.collection_select :blogger_id, @bloggers, :id, :name %>

    <%= f.label :destination_id %>
    <%= f.collection_select :destination_id, @destinations, :id, :name %>

    <%= f.submit "Submit" %>

<% end %>