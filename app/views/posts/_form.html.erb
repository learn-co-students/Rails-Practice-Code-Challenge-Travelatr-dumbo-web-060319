<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error_message| %>
        <li>
            <%= error_message %>
        </li>
    <% end %>
    </ul>
<% end %>

<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <br>
    <%= f.label :blogger %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
    <br>
    <%= f.label :destination %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name %>
    <br>
    <%= f.submit %>
<% end %>